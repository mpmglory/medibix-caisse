{% extends 'base.html.twig' %}

{% block body %}
    <h1>Medoc3</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ medoc3.id }}</td>
            </tr>
            <tr>
                <th>Quantity</th>
                <td>{{ medoc3.quantity }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ medoc3.price }}</td>
            </tr>
