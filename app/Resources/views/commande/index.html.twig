{% extends 'base.html.twig' %}

{% block body %}
    <h1>Liste de toute les factures</h1>

    <table class="table table-bordered table-hover table-striped results">
        <thead>
            <tr>
                <th>#</th>
                <th>Patient</th>
                <th>Montant</th>
                <th>Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for commande in commandes %}
            <tr>
                <td><a href="{{ path('commande_show', { 'id': commande.id }) }}">{{ commande.id }}</a></td>
                <td>{{ commande.patient.name }}</td>
                <td>{{ commande.amount }}</td>
                <td>{% if commande.date %}{{ commande.date|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('commande_show', { 'id': commande.id }) }}">Afficher</a>
                        </li>
                        {% if is_granted("ROLE_ADMIN") %}
                        <li>
                            <a href="{{ path('commande_edit', { 'id': commande.id }) }}">edit</a>
                        </li>
                        {% endif %}
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('commande_new') }}" class="btn btn-primary btn-block btn-lg">
            <span class="glyphicon glyphicon-plus"></span> Vendre des m√©dicaments</a><p>  </p>
        </li>
    </ul>
{% endblock %}
